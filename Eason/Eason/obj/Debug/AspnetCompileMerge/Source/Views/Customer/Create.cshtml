@model Eason.Models.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">assignment</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">新增客戶</h4>
                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                @Html.LabelFor(model => model.CST_NAME, new { @Class = "control-label" })
                                <div>
                                    @Html.TextBoxFor(model => model.CST_NAME, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.CST_NAME)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                @Html.LabelFor(model => model.CST_CODE, new { @Class = "control-label" })
                                <div>
                                    @Html.TextBoxFor(model => model.CST_CODE, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.CST_CODE)
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">確定新增</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
}